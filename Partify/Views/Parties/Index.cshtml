@model Partify.ViewModels.Parties.IndexVM

@{
    ViewBag.Title = "Your parties";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}

<a href="/Parties/Create" style="display: block; padding-left:5px; width: 45px; background-color: darkorange; color:white !important;">New</a>
<div class="container">
    <div class="row row-header">
        <div class="col-sm-2">Title</div>
        <div class="col-sm-4">Description</div>
        <div class="col-sm-4">Invited</div>
        <div class="col-sm-2">Options</div>
    </div>
    @for(int i=0; i<Model.Items.Count(); i++)
    {
        <div class="row">
            <div class="col-sm-2">@Model.Items[i].Title</div>
            <div class="col-sm-4">@Model.Items[i].Description</div>
            <div class="col-sm-4">
                Invited are:
                @foreach (string user in Model.Invited[i])
                {
                    <span>@user, </span>
                }
            </div>
            <div class="col-sm-2">
                <a href="/Invites/Create?partyId=@Model.Items[i].Id">share</a>
                <a href="/Parties/Edit?id=@Model.Items[i].Id">edit</a>
                <a href="/Parties/Delete?id=@Model.Items[i].Id" onclick="return confirm('Delete item?')">delete</a>
            </div>
        </div>
    }
</div>